<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_classifier_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="识别到的类"
        android:textColor="#9f9f9f" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/blurLevel1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/blurLevel2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/blurLevel3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerInside" />


    <Button
        android:id="@+id/iv_choose_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相册" />

    <Button
        android:id="@+id/iv_take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍照" />

    <Button
        android:id="@+id/opencv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="opencv" />

    <Button
        android:id="@+id/smartpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="smartpaper"
        android:visibility="gone" />

    <Button
        android:id="@+id/tensorflow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tensorflow"
        android:visibility="gone" />

    <Button
        android:id="@+id/tensorflowOpencv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tensorflow+OpenCV" />

    <Button
        android:id="@+id/nextPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="next pic" />


</LinearLayout>
